{
  "name": "scheduler-server",
  "version": "2.0.0",
  "prisma": {
    "seed": "npx ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "dotenv -e .env.dev -- concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "migrate:dev": "dotenv -e .env.dev -- npx prisma migrate dev",
    "migrate:test": "dotenv -e .env.test -- npx prisma migrate dev",
    "seed:dev": "dotenv -e .env.dev -- npx prisma db seed --",
    "seed:test": "dotenv -e .env.test -- npx prisma db seed --",
    "studio:dev": "dotenv -e .env.dev -- npx prisma studio",
    "studio:test": "dotenv -e .env.test -- npx prisma studio",
    "test:unit": "dotenv -e .env.test -- vitest -c ./vitest.config.unit.ts",
    "test:integration": "./scripts/integration.sh",
    "start": "node dist/src/index.js",
    "build": "npx tsc",
    "check": "tsc --noEmit",
    "lint": "eslint --max-warnings=0 src",
    "prettify": "prettier ./src/**/*.ts --write",
    "commit": "commit",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "bash -c 'npm run check'",
      "npm run lint",
      "npm run prettify",
      "npm run test:integration -- related --run"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@clerk/clerk-sdk-node": "^4.13.11",
    "@prisma/client": "^5.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-validator": "^7.0.1",
    "lexorank": "^1.0.5",
    "node-schedule": "^2.1.1",
    "ramda": "^0.29.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/prompt-cli": "^19.2.2",
    "@faker-js/faker": "^8.4.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.29",
    "@types/node-schedule": "^2.1.6",
    "@types/ramda": "^0.29.11",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/web-push": "^3.6.3",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitest/coverage-v8": "^1.4.0",
    "@vitest/ui": "^1.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "prisma": "^5.11.0",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2",
    "vitest": "^1.4.0"
  }
}
